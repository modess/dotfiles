set $ws6_key_qwerty 6
set $ws7_key_qwerty 7
set $ws8_key_qwerty 8
set $ws9_key_qwerty 9
set $ws10_key_qwerty 0

# switch to workspace
bindsym $mod+$ws1_key_colemak    workspace  $ws1
