######################################
# color settings for bar and windows #
######################################

exec_always --no-startup-id xrdb -load ~/.Xresources
set_from_resource $background background
set_from_resource $foreground foreground
set_from_resource $primary color4
set_from_resource $black color0

# class                 border  bground text    indicator child_border
client.focused          $primary $primary $black $black $secondary
client.focused_inactive $primary $primary $black $black $secondary
client.unfocused        $background $background $foreground $background $black
client.urgent           $secondary $secondary $foreground $secondary $primary
client.background       $background

############################################
# bar settings                             #
############################################

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

#####################################
# Application menu handled by rofi: #
#####################################
#
bindsym $mod+d exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi

bindsym $mod+t exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi

bindsym $mod+period exec rofi -show emoji -modi emoji:rofimoji \
        -config ~/.config/rofi/rofidmenu.rasi

bindsym $mod+c exec rofi -show calc -modi calc -no-show-match -no-sort -calc-command "echo -n '{result}' | xclip" -kb-accept-custom="Alt+Return" \
        -config ~/.config/rofi/rofidmenu.rasi


bindsym $mod+Shift+e exec ~/.config/i3/powermenu
